<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/constraint_layout"
    android:background="@drawable/background_image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/horizontal_linear_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/vertical_linear_layout"
            android:layout_weight="0"
            >

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    style="@style/btnLightTheme"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="1\n .,?"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/button2"
                    style="@style/btnLightTheme"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="2\n abc"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/button3"
                    style="@style/btnLightTheme"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="3\n def"
                    android:onClick="onButtonClick" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    style="@style/btnLightTheme"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="4\n ghi"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/button5"
                    style="@style/btnLightTheme"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="5\n jkl"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/button6"
                    style="@style/btnLightTheme"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="6\n mno"
                    android:onClick="onButtonClick" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    style="@style/btnLightTheme"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="7 pqrs"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/button8"
                    style="@style/btnLightTheme"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="8\n tuv"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/button9"
                    style="@style/btnLightTheme"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="9 wxyz"
                    android:onClick="onButtonClick" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button10"
                    style="@style/btnLightTheme"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/backspace_image"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/button11"
                    style="@style/btnLightTheme"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="SPACE"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/button12"
                    style="@style/btnLightTheme"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@drawable/enter_image"
                    android:onClick="onButtonClick" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/button13"
                    style="@style/btnLightTheme"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="17sp"
                    android:text="LEFT RIGHT"
                    android:onClick="onButtonClick" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="50dp"
            android:layout_height="100dp"
            style="@style/btnLightTheme"
            android:text=""
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:layout_gravity="center"
            android:layout_margin="20dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>